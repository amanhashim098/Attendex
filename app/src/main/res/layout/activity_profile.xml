<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Hamburger Icon (Menu Button) -->
        <ImageView
            android:id="@+id/hamburger_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:clickable="true"
            android:contentDescription="@string/hamburger_icon"
            android:focusable="true"
            android:src="@drawable/ic_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Scrollable Section -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/hamburger_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Profile Image -->
                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/unnamed"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Name -->
                <TextView
                    android:id="@+id/valueName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Aman Hashim"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/profileImage"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Class -->
                <TextView
                    android:id="@+id/textClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Class:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/valueName"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Attendance Percentage -->
                <TextView
                    android:id="@+id/valueClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="10A"
                    android:textSize="16sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/textClass"
                    app:layout_constraintStart_toEndOf="@id/textClass" />

                <TextView
                    android:id="@+id/textAttendancePercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Attendance Percentage:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/textClass"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Aggregate Percentage -->
                <TextView
                    android:id="@+id/valueAttendancePercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="95%"
                    android:textSize="16sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/textAttendancePercentage"
                    app:layout_constraintStart_toEndOf="@id/textAttendancePercentage" />

                <TextView
                    android:id="@+id/textAggregatePercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Aggregate Percentage:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/textAttendancePercentage"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/valueAggregatePercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="89%"
                    android:textSize="16sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/textAggregatePercentage"
                    app:layout_constraintStart_toEndOf="@id/textAggregatePercentage" />

                <!-- Total Hours -->
                <TextView
                    android:id="@+id/textTotalHours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Total Hours Taken:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/textAggregatePercentage"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/valueTotalHours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="100"
                    android:textSize="16sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/textTotalHours"
                    app:layout_constraintStart_toEndOf="@id/textTotalHours" />

                <!-- Hours Missed -->
                <TextView
                    android:id="@+id/textHoursMissed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Hours Missed:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/textTotalHours"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/valueHoursMissed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="5"
                    android:textSize="16sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/textHoursMissed"
                    app:layout_constraintStart_toEndOf="@id/textHoursMissed" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
