<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Welcome,"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teacherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Teacher Name"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText" />

    <ImageView
        android:id="@+id/teacherImage"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="60dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacherName" />

    <TextView
        android:id="@+id/facultyIdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Faculty ID"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/teacherImage"
        app:layout_constraintTop_toTopOf="@+id/teacherImage" />

    <TextView
        android:id="@+id/facultyIdValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_semibold"
        android:text="22104568"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/teacherImage"
        app:layout_constraintTop_toBottomOf="@+id/facultyIdLabel" />

    <GridLayout
        android:id="@+id/buttonGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="16dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacherImage">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pendingClaimsButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="4dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:fontFamily="@font/inter_semibold"
            android:padding="16dp"
            android:text="Pending Claims"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:backgroundTint="@color/green"
            app:elevation="10dp"
            app:strokeColor="@color/green" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/approvedClaimsButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="4dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:fontFamily="@font/inter_semibold"
            android:padding="16dp"
            android:text="Approved Claims"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:backgroundTint="@color/colorPrimary"
            app:elevation="10dp"
            app:strokeColor="@color/colorPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/deniedClaimsButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="4dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:fontFamily="@font/inter_semibold"
            android:padding="16dp"
            android:text="Denied Claims"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:backgroundTint="@color/red"
            app:strokeColor="@color/red" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/reviewClaimsButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="4dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:fontFamily="@font/inter_semibold"
            android:padding="16dp"
            android:text="Review Claims"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:backgroundTint="@color/colorPrimary"
            app:elevation="10dp"
            app:strokeColor="@color/colorPrimary" />

    </GridLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomNavCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginBottom="32dp"
        android:outlineAmbientShadowColor="@color/GlowColor"
        android:outlineSpotShadowColor="@color/GlowColor"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="24dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/GlowColor"
        app:strokeWidth="1dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/transparent"
            app:itemActiveIndicatorStyle="@null"
            app:itemHorizontalTranslationEnabled="true"
            app:itemIconTint="@color/nav_color_selector"
            app:itemRippleColor="@color/unselected_color"
            app:itemTextColor="#FFFFFF"
            app:labelVisibilityMode="selected"
            app:menu="@menu/bottom_nav_menu" />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>